<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CadastroTreinamentoActivity">

    <TextView
        android:id="@+id/lblTreinamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Treinamento"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNomeTreinamento"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_edittext_rounded"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTreinamento" />

    <EditText
        android:id="@+id/edtDescricaoTreinamento"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edittext_rounded"
        android:ems="10"
        android:hint="Descrição"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edtNomeTreinamento"
        app:layout_constraintStart_toStartOf="@+id/edtNomeTreinamento"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeTreinamento" />

    <EditText
        android:id="@+id/edtDataInicioTreinamento"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edittext_rounded"
        android:ems="10"
        android:hint="Data Início"
        android:inputType="phone"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edtDescricaoTreinamento"
        app:layout_constraintStart_toStartOf="@+id/edtDescricaoTreinamento"
        app:layout_constraintTop_toBottomOf="@+id/edtDescricaoTreinamento" />

    <EditText
        android:id="@+id/edtDataFimTreinamento"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edittext_rounded"
        android:ems="10"
        android:hint="Data Término"
        android:inputType="phone"
        android:paddingLeft="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edtDataInicioTreinamento"
        app:layout_constraintStart_toStartOf="@+id/edtDataInicioTreinamento"
        app:layout_constraintTop_toBottomOf="@+id/edtDataInicioTreinamento" />

    <Button
        android:id="@+id/btnCadastrar6"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_button_rounded"
        android:onClick="Cadastrar"
        android:text="SALVAR"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/edtDataInicioTreinamento"
        app:layout_constraintStart_toStartOf="@+id/edtDataInicioTreinamento"
        app:layout_constraintTop_toBottomOf="@+id/edtDataFimTreinamento" />
</androidx.constraintlayout.widget.ConstraintLayout>