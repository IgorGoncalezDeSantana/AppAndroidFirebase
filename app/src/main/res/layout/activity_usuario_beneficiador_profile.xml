<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.UsuarioBeneficiadorProfileActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgviewProfileFoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:adjustViewBounds="false"
                app:civ_border_color="@android:color/holo_green_dark"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnSelecionarFoto"
                app:layout_constraintEnd_toEndOf="@+id/btnSelecionarFoto"
                app:layout_constraintStart_toStartOf="@+id/btnSelecionarFoto"
                app:layout_constraintTop_toTopOf="@+id/btnSelecionarFoto" />

            <TextView
                android:id="@+id/txtProfileNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Nome:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtProfileDataNascimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Data Nascimento:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtProfilePet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Pet:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProfileNomePet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Nome:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtProfileDataNascimentoPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Data Nascimento:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtProfileRacaPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Raça:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtProfileSexoPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Sexo:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtProfileDescricaoPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Descrição:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtProfileVacinacoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Vacinações:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/ProfileListViewVacinacoes"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp" />

            <TextView
                android:id="@+id/txtProfileTreinamentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="30sp"
                android:layout_weight="1"
                android:text="Treinamentos:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/ProfileListViewTreinamentos"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp" />

            <Button
                android:id="@+id/btnConversar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="40sp"
                android:layout_marginRight="30sp"
                android:background="@drawable/bg_button_rounded"
                android:onClick="Conversar"
                android:text="CONVERSAR"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/edtDescricao"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edtDescricao"
                app:layout_constraintTop_toBottomOf="@+id/edtDescricao" />

            <Button
                android:id="@+id/btnDenunciar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:background="@drawable/bg_button_rounded_red"
                android:onClick="Denunciar"
                android:text="DENUNCIAR"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/edtDescricao"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edtDescricao"
                app:layout_constraintTop_toBottomOf="@+id/edtDescricao" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>